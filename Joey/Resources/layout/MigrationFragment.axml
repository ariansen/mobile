<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:layout_width="320dp"
        android:layout_height="340dp">
        <TextView
            android:id="@+id/topLabel"
            android:textSize="24sp"
            android:layout_gravity="center"
            android:text="@string/MigratingUpdateTitle"
            android:textColor="#2e2e2e"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/descLabel"
            android:textSize="16sp"
            android:text="@string/MigratingUpdateDesc"
            android:textColor="#2e2e2e"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/toggler1"
            android:src="@drawable/toggler_1"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_width="109dp"
            android:layout_height="167dp" />
        <ImageView
            android:visibility="gone"
            android:id="@+id/toggler2"
            android:src="@drawable/toggler_2"
            android:layout_gravity="center"
            android:layout_marginTop="52dp"
            android:layout_width="80dp"
            android:layout_height="134dp" />
        <TextView
            android:id="@+id/percente"
            android:text="65%"
            android:textSize="18sp"
            android:textColor="#2e2e2e"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginTop="7dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:id="@+id/migrationProgressBar"
            android:progressTint="@color/green"
            android:progress="0"
            android:indeterminate="false" />
        <TextView
            android:visibility="gone"
            android:id="@+id/discardLabel"
            android:textSize="14sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="24dp"
            android:textColor="@color/material_gray"
            android:text="@string/MigratingDiscardTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:visibility="gone"
            android:id="@+id/discardDesc"
            android:text="@string/MigratingDiscardDesc"
            android:textSize="14sp"
            android:gravity="center"
            android:textColor="@color/material_gray"
            android:layout_gravity="center"
            android:layout_marginTop="24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:visibility="gone"
            android:id="@+id/tryAgainBtn"
            style="@style/Button.Green"
            android:text="@string/MigratingTryBtn"
            android:layout_width="296dp"
            android:layout_height="48dp"
            android:textSize="16sp"
            android:layout_marginTop="24dp"
            android:layout_gravity="center_horizontal"
            android:layout_centerInParent="true" />
        <Button
            android:visibility="gone"
            android:text="@string/MigratingDiscardBtn"
            android:id="@+id/discardBtn"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            android:textSize="14sp"
            android:textColor="@color/green"
            android:textAllCaps="false"
            android:layout_marginTop="12dp"
            android:layout_width="wrap_content"
            android:layout_height="20dp" />
    </LinearLayout>
</RelativeLayout>